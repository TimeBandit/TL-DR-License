            .condition-color.condition-network-use
            .condition-name Network Use Is Distribution
            
        .card.tooltip-color-code.tooltip-conditions(data-tooltip-content="Modifications must be released under the same license when distributing the software. In some cases a similar or related license may be used.")
          .condition
            .condition-color.condition-same-license
            .condition-name Same License
      
        .card.tooltip-color-code.tooltip-conditions(data-tooltip-content="Indicate changes made to the code.")
          .condition
            .condition-color.condition-state-changes
            .condition-name State Changes
        
      .limitations.legal-catgory
        .card
          .legal-label.legal-label-limitations Limitations
    
        .splitter.limitations-color-splitter-left

        .card.tooltip-color-code.tooltip-limitations(data-tooltip-content="Software is provided without warranty and the software author/license owner cannot be held liable for damages.")
          .limitation
            .limitation-color.limitation-hold-liable
            .limitation-name Hold Liable
        
