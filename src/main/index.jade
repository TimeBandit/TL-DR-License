    .license-definitions
      .permissions.legal-catgory
        .card
          .legal-label.legal-label-permissions Permissons
    
        .splitter.permissions-color-splitter-left

        .card.tooltip-color-code.tooltip-permissions(data-tooltip-content="This software and derivatives may be used for commercial purposes.")
          .permission
            .permission-color.permission-commercial
            .permission-name Commercial Use
        
        .card.tooltip-color-code.tooltip-permissions(data-tooltip-content="You may distribute this software.")
          .permission
            .permission-color.permission-distribution
            .permission-name Distribution
            
        .card.tooltip-color-code.tooltip-permissions(data-tooltip-content="This software may be modified.")
          .permission
            .permission-color.permission-modification
            .permission-name Modification
            
        .card.tooltip-color-code.tooltip-permissions(data-tooltip-content="This license provides an express grant of patent rights from the contributor to the recipient.")
          .permission
            .permission-color.permission-patent
            .permission-name Patent Use
      
        .card.tooltip-color-code.tooltip-permissions(data-tooltip-content="You may use and modify the software without distributing it.")
          .permission
            .permission-color.permission-private
            .permission-name Private Use
      
      .conditions.legal-catgory
        .card
          .legal-label.legal-label-conditions Conditions
    
        .splitter.conditions-color-splitter-left

        .card.tooltip-color-code.tooltip-conditions(data-tooltip-content="Source code must be made available when distributing the software.")
          .condition
            .condition-color.condition-disclose
            .condition-name Disclose Source
        
        .card.tooltip-color-code.tooltip-conditions(data-tooltip-content="Include a copy of the license and copyright notice with the code.")
